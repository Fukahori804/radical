<div class="sign_up">
  <div class="sign_up_box">
    <div class="title_area">
      <div class="title">Sign up</div>
    </div>  
      <div class="field_area">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field_input", :placeholder => "username" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"field_input", :placeholder => "password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field_input", :placeholder => "password-confirmation" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>