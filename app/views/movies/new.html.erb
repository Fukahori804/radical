<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @movie do |f| %>


  <div class="field">
    <%= f.label :映画名 %>
    <%= f.text_field :name, :size => 30 %>
  </div>

  <h5>総合評価</h5>
  <div class="post_form">
   <%= f.radio_button :degree, 5 ,id: 'star1'%>
   <label for="star1"><span class="text">超過激</span>★</label>

   <%= f.radio_button :degree, 4 ,id: 'star2'%>
   <label for="star2"><span class="text">めっちゃ過激</span>★</label>

   <%= f.radio_button :degree, 3 ,id: 'star3'%>
   <label for="star3"><span class="text">過激</span>★</label>

   <%= f.radio_button :degree, 2 ,id: 'star4'%>
   <label for="star4"><span class="text">やや過激</span>★</label>

   <%= f.radio_button :degree, 1 ,id: 'star5'%>
   <label for="star5"><span class="text">ちょっと過激</span>★</label>
</div>

<div class="field">
<%= f.label :ジャンル %>
<%= f.text_field :genre, :size => 30 %>
</div>


<div class="field">
<%= f.label :公開日 %>
<%= f.text_field :day, :size => 30 %>
</div>


<div class="field">
<%= f.label :監督名 %>
<%= f.text_field :directorsname, :size => 30 %>
</div>


<div class="field">
<%= f.label :画像 %>
<%= f.file_field :image %>
</div>

<div class="field">
    <%= f.label :レビュー  %>
    <%= f.text_area :review, :size => "30x4" %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", movies_path %>